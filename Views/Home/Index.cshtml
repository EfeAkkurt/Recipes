@model List<Recipe>
@{
    ViewData["Title"] = "Anasayfa";
}

@foreach (var recipes in Model)
{
    <div style="display: flex; align-items: center; margin-bottom: 20px;">
        <img src="@recipes.ImageUrl" alt="@recipes.RecipeName" style="width: 100px; height: 100px; object-fit: cover; margin-right: 15px;" />
        <h3>
            <a href="/home/detail/@recipes.Id">@recipes.RecipeName</a>
        </h3>
    </div>
    <hr />
}
