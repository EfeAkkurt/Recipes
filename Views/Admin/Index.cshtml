@model List<Recipe>

<table class="table">
	<thead>
		<tr>
			<th width="70%">tarif</th>
			<th width="30%" class="text-center"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var recipe in Model)
		{
			<tr>
				<td>
					@recipe.RecipeName
					<a href="/home/detail/@recipe.Id" target="_blank">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-up-right" viewBox="0 0 16 16">
							<path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5" />
							<path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0z" />
						</svg>
					</a>
				</td>
				<td class="text-end">
					<a href="/Admin/delete/@recipe.Id" class="btn btn-danger" onclick="return confirm('Emin misin?')">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>
<h4>Tarif Ekle</h4>
<form method="post" autocomplete="off">
	<p><input required type="text" name="RecipeName" placeholder="Tarif İsmi" /></p>
	<p><input required type="url" name="ImageUrl" placeholder="Resim URL" /></p>
	<p><textarea rows="3" cols="70" placeholder="Ingredients" name="İçindekiler"></textarea></p>
	<p><textarea rows="3" cols="70" placeholder="Preparation" name="Hazırlanış"></textarea></p>
	<p><button class="btn btn-primary">Ekle</button></p>
</form>